      "type": "string",
      "$ref": "./lists/#functional_status"
    },
    "admission": {
      "type": "number",
      "enum": [
        "yes",
        "no"
      ]
    },
    "referred_to_elsewhere": {
      "type": "number",
      "enum": [
        "yes",
        "no"
      ]
    },
    "referred_to_location": {
