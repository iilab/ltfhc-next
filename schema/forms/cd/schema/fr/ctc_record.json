    "district_div_ward": {
      "type": "string"
    },
    "steet_village": {
      "type": "string"
    },
    "village_chairman": {
      "type": "string"
    },
    "ten_cell_leader": {
      "type": "string"
    },
    "head_of_household": {
      "type": "string"
    },
    "contact_household_head": {
      "type": "string"
    },
    "treatment_support": {
      "type": "string"
    },
    "contact_treatment_support": {
      "type": "string"
    },
    "joined_community_support": {
      "type": "number",
      "enum": [
