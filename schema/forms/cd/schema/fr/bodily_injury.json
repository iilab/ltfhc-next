{
  "$schema": "http://json_schema.org/draft-04/schema#",
  "_id": "bodily_injury",
  "title": "Bodily Injury",
  "description": "",
  "type": "object",
  "properties": {
    "injury_date": {
      "type": "date",
      "format": "date"
    },
    "injury_type": {
      "type": "string",
      "$ref": "./lists/#injuries"
    },
    "injury_other": {
      "type": "string"
    },
    "sexual_violence": {
      "type": "number",
      "enum": [
        "yes",
        "no"
      ]
    },
    "testing_method": {
      "type": "string"
    },
    "treatment": {
      "type": "string",
      "$ref": "./lists/#injury_treatments"
    },
    "treatment_other": {
      "type": "string"
    },
    "admission": {
      "type": "number",
      "enum": [
        "yes",
        "no"
      ]
    },
    "injury_mortality": {
      "type": "number",
      "enum": [
        "yes",
        "no"
      ]
    },
    "referred_to_elsewhere": {
      "type": "number",
      "enum": [
        "yes",
        "no"
      ]
    },
    "referred_to_location": {
      "type": "string",
      "$ref": "./lists/#referral_locations"
    },
    "follow_up_recommended": {
      "type": "number",
      "enum": [
        "yes",
        "no"
      ]
    }
  }
}